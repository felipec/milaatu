#!/usr/bin/env python

import os, sys
import json
from datetime import datetime

import gobject

class Pipe(object):
	def __init__(self):
		r, w = os.pipe()
		r, w = os.fdopen(r, 'r', 0), os.fdopen(w, 'w', 0)
		self.r, self.w = r, w

	def close_in(self):
		self.r.close()

	def close_out(self):
		self.w.close()

	def dump(self, obj):
		json.dump(obj, self.w)
		print >> self.w

	def load(self):
		s = self.r.readline()
		if not s: return None
		return json.loads(s)

def run_child():
	gobject.threads_init()

	while True:
		data = p2.load()
		if not data: break

		base = data['base']

		try:
			mname = "tests." + base
			__import__(mname)
			module = sys.modules[mname]
			t = module.test_class()
			for kv in data['in'].iteritems():
				setattr(t, *kv)
			t.start()
			if t.error:
				data['error'] = t.error
			if hasattr(t, 'out') and t.out:
				data['out'] = t.out
			if hasattr(t, 'checks') and t.checks:
				data['checks'] = t.checks
				total = len(t.checks)
				result = 0.0
				for x in t.checks.values():
					result += 100 * float(x) / total
				data['result'] = result

		except ImportError, e:
			data['error'] = "bad test '%s': %s" % (base, e)

		p1.dump(data)

	sys.exit(0)

def respawn():
	global p1, p2

	p1 = Pipe()
	p2 = Pipe()

	pid = os.fork()
	if pid:
		# Parent
		p1.close_out()
		p2.close_in()

		return pid

	else:
		# Child
		p1.close_in()
		p2.close_out()

		run_child()

def get_date():
	return datetime.now().strftime("%Y-%m-%d %H:%M:%S")

run = {}
run['date'] = get_date()

f = open("tests.json", "r")
tests = json.load(f)
results = []

pid = respawn()

for t in tests:
	n = {}
	n['name'] = t.pop('name')
	n['base'] = t.pop('base')
	n['in'] = t
	print n['name']

	p2.dump(n)
	data = p1.load()
	if not data:
		p, s = os.waitpid(pid, os.P_NOWAIT)
		pid = respawn()
		data = n
		data['error'] = "process died: signal %i" % s

	if 'error' in data:
		r = 0.0
	elif 'result' in data:
		r = data['result']
	else:
		r = 100.0

	if data['in'].get('expected_failure', False):
		r = 100.0 - r

	data['result'] = r
	data['date'] = get_date()
	results.append(data)

run['results'] = results

o = open("results.json", "w")
json.dump(run, o, indent = 4, sort_keys = True)
print >> o
